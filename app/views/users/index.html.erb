<h1>Listing users</h1>

<table>
  <tr>
    <th>User</th>
    <th>First name</th>
    <th>Surname</th>
    <th>Mobile number</th>
    <th>Email</th>
    <th>Gender</th>
    <th>Birthyear</th>
    <th>Password</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.user_id %></td>
    <td><%= user.first_name %></td>
    <td><%= user.surname %></td>
    <td><%= user.mobile_number %></td>
    <td><%= user.email %></td>
    <td><%= user.gender %></td>
    <td><%= user.birthyear %></td>
    <td><%= user.password %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

